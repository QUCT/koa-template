{
  "compilerOptions": {
    "target": "es6", // 编译后的 JavaScript 版本
    "module": "commonjs", // 生成代码的模块系统类型
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 启用esModule语法
    "sourceMap": true, // 生成源码映射文件，便于调试
    "resolveJsonModule": true, // 允许从.json文件中导入模块
    "lib": ["es6", "dom"], // 编译时需要引入的库文件的列表
    "noImplicitAny": true, // 不允许隐式的 any 类型
    "moduleResolution": "node", // 模块解析策略
    "baseUrl": "./", // 用于解析非相对模块名称的基目录
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "paths": { "*": ["node_modules/*"] } // 设置路径映射
  },
  "include": [
    "./app/**/*" // 指定需要编译的文件
  ],
  "exclude": [
    "node_modules", // 排除不需要编译的文件或文件夹
    "**/*.test.ts"
  ]
}
